import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashSet;
import java.util.List;
import java.util.Map;
import java.util.Set;
import java.util.Collection;


public class CellObject {
	private static int solvedCount = 0;
	private boolean hasValue = false;
	private Integer value;
	private ArrayList<Integer> possibleValues;
	private boolean orginalNumber = false;

	public CellObject(Integer value){
		this.value = value;
		if(value != 0){
			this.orginalNumber = true;
			this.solvedCount++;
			this.hasValue = true;
		}else{
			this.possibleValues = new ArrayList<Integer>(Arrays.asList(1,2,3,4,5,6,7,8,9));
		}
	}
	public boolean isSolved(){
		return solvedCount == 81;
	}

	public int getSolvedCount(){
		return solvedCount;
	}
	
	public boolean hasValue(){
		return hasValue;
	}
	
	public void resetValue(){
		hasValue = false;
		this.value = 0;
		solvedCount--;
	}
	
	public ArrayList<Integer> getPossiblIntegers(){
		return possibleValues;
	}

	public boolean isOrginal(){
		return orginalNumber;
	}

	public Integer getValue(){
		return this.value;
	}
	public void setValue(Integer i){
		this.hasValue = true;
		this.value = i;
		solvedCount++;
	}

	public boolean setValList(ArrayList<Integer> list){
		this.possibleValues = new ArrayList<Integer>(list);
		if(list.size() == 0)
			return false;
		else if(list.size() == 1)
			this.value = list.get(0);
		return true;	

	}




}
